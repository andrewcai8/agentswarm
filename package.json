{
  "name": "longshot",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-agent coding harness",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo dev",
    "typecheck": "turbo run typecheck",
    "lint": "biome check .",
    "format": "biome check --write .",
    "format:check": "biome check .",
    "stagehand:record": "node scripts/stagehand-record.mjs",
    "stagehand:record:hook": "node scripts/stagehand-record.mjs --trigger=post-merge",
    "stagehand:hooks:install": "bash scripts/install-stagehand-hooks.sh",
    "test": "turbo test",
    "lint:python": "ruff check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/node": "^25.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.3.1",
    "turbo": "^2.8.12",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "@browserbasehq/stagehand": "^3.1.0",
    "@longshot/core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.27.1",
    "zod": "^4.3.6"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.py": [
      "ruff check --fix",
      "ruff format"
    ]
  }
}
