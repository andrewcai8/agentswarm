{
  "name": "@longshot/orchestrator",
  "version": "0.1.0",
  "description": "Multi-agent orchestration for Longshot",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "@longshot/core": "workspace:*",
    "@mariozechner/pi-coding-agent": "^0.55.3",
    "dotenv": "^17.3.1"
  },
  "devDependencies": {
    "@types/node": "^25.3.3",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc -b --watch --preserveWatchOutput",
    "typecheck": "tsc --noEmit",
    "test": "tsc && node --test dist/__tests__/*.test.js",
    "clean": "rm -rf dist",
    "start": "node dist/main.js"
  }
}
